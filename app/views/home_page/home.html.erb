<div class="container-fluid text-center">
	<table>
	<% @cities.in_groups_of(3) do |row_cities| %>
		<tr>	
			<% row_cities.each do |city| %>		
				<td>
					<h3><%= city.name %></h3>
					<p><%= city.country %></p>
					<%= link_to "See More", city_path(city) %>
				</td>
			<% end %>
		</tr>
	<% end %>
	</table>
</div>